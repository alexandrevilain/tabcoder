{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2024",
		"lib": [
			"ES2024",
			"DOM",
			"DOM.Iterable"
		],
		"outDir": "out",
		"sourceMap": true,
		"rootDir": "src",
		"strict": true /* enable all strict type-checking options */,
		/* Additional Checks */
		"noUnusedLocals": true /* Report errors on unused locals. */
	},
	"exclude": [
		"node_modules"
	]
}